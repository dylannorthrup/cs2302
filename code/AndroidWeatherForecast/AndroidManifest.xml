<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidweatherforecast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
<!-- 'sunny.png' file retrieved from http://www.iconarchive.com/show/weather-icons-by-icons-land/Sunny-icon.html
and used by the expressed license allowing it to be free for non-commercial use -->    
    <application
        android:allowBackup="true"
        android:icon="@drawable/sunny"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.androidweatherforecast.WeatherForecastActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
